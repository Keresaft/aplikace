{% extends 'base.html.twig' %}

{% block title %}Nová platba{% endblock %}


{% block body %}
    <div class="flex justify-between items-center">
        <h1 class="text-3xl mb-4 text-center flex-grow mt-4">Nová platba</h1>
    </div>
    <div class="flex justify-center">
        <div class="w-1/2">
            {{ form_start(form) }}
            <div class="mb-4">
                {{ form_row(form.paymentAmount, {
                    'label': 'Částka:',
                    'attr': {'class': 'w-full p-2 border border-gray-300 rounded'}
                }) }}
            </div>
            <div class="mb-4">
                {{ form_row(form.paymentCode, {
                    'label': 'Číslo platby:',
                    'attr': {'class': 'w-full p-2 border border-gray-300 rounded'}
                }) }}
            </div>

            <div class="text-center">
                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">
                    Přidat
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}

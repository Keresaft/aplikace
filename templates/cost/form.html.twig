{% extends 'base.html.twig' %}

{% block title %}Nový náklad{% endblock %}


{% block body %}
    <div class="flex justify-between items-center">
        <h1 class="text-3xl mb-4 text-center flex-grow mt-4">Nový náklad</h1>
    </div>
    <div class="flex justify-center">
        <div class="w-1/2">
            {{ form_start(form) }}
            <div class="mb-4">
                {{ form_row(form.item, {
                    'label': 'Položka:',
                    'attr': {'class': 'w-full p-2 border border-gray-300 rounded'}
                }) }}
            </div>

            <div class="mb-4">
                {{ form_row(form.documentNumber, {
                    'label': 'Číslo dokladu:',
                    'attr': {'class': 'w-full p-2 border border-gray-300 rounded'}
                }) }}
            </div>

            <div class="mb-4">
                {{ form_row(form.transactionNumber, {
                    'label': 'Číslo transakce:',
                    'attr': {'class': 'w-full p-2 border border-gray-300 rounded'}
                }) }}
            </div>
            <div class="mb-4">
                {{ form_row(form.purchasedFrom, {
                    'label': 'Nakoupeno od:',
                    'attr': {'class': 'w-full p-2 border border-gray-300 rounded'}
                }) }}
            </div>

            <div class="mb-4">
                {{ form_row(form.cost, {
                    'label': 'Cena:',
                    'attr': {'class': 'w-full p-2 border border-gray-300 rounded'}
                }) }}
            </div>
            <div class="mb-4">
                {{ form_row(form.purchaseDate, {
                    'label': 'Datum nákupu:',
                    'attr': {'class': 'w-full pt-2 border border-gray-300 rounded'}
                }) }}
            </div>

            <div class="text-center">
                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">
                    Přidat
                </button>
                <a href="{{ path('costs') }}" class="inline-block pt-2 bg-blue-300 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded mr-10">
                    Zrušit
                </a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
